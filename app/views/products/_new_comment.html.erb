<div>
  <% if signed_in? %>
    <h2 class= "fun-font">Add a review:</h2>
    <%= form_for([@product, @product.comments.build]) do |f| %>
      <p>
        <%= f.label :body, "Comments" %><br>
        <%= f.text_area :body, class: 'form-control', placeholder: 'Enter comment here' %>
      </p>
      <p>
        <div class="rating"></div>
      </p>
      <p>
        <%= f.submit "Submit", class: 'btn btn-default' %>
      </p>
    <% end %>    
  <% end %>
</div>