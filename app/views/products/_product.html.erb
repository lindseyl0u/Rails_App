
  <div class="col-md-4">
    <% cache product do %>
    <%= image_tag(product.image_url, class:"img-responsive") %>
    <h1 class="fun-font green-font"><%= product.name %></h1>
    <p><%= product.description %></p>
    <p><%= product.flavour %></p>
    <p><%= product.price %></p>
    <% end %>
    <p><%= link_to 'Show', product, class:'btn btn-default btn-sm' %></p>
    <p><%= link_to 'Edit', edit_product_path(product),class:'btn btn-default btn-sm' %></p>
    <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default btn-sm' %></p>
  </div><!-- /col -->