<p id="notice"><%= notice %></p>

<div class="col-md-4 col-xs-12">
<%= image_tag(@product.image_url, class: "thumbnail img-responsive") %>  
</div>

<div class="col-md-2 col-xs-12 product-description">
    
    <h2 class="fun-font">
      <%= @product.name %>
    </h2>
    <h5>
      <%= @product.description %>
    </h5>
  <p>
    <strong>Flavour:</strong>
    <%= @product.flavour %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>

<div class= "col-xs-12">
  <h1 class= "fun-font">Reviews</h1>
</div>



